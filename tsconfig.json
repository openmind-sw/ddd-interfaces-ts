{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "src",
    "tests"
  ]
}
